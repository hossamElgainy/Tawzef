@model IEnumerable<Tawzef.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1></h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
@foreach (var item in Model)
{
    <h1>@Html.DisplayFor(z => item.CategoryName)</h1>
    <h5>@Html.DisplayFor(z => item.CategoryDescription)</h5>
    <div class="row">
        @foreach (var subitem in item.Jobs)
        {
            <div class="col-md-3 thumbnail job-box">
                <img src="~/UPloads/@subitem.JobImage" />
                <div class="details">
                    <h3>@Html.DisplayFor(z => subitem.JobTitle)</h3>
                    <h5>@Html.DisplayFor(z => subitem.JobContent)</h5>
                    <button class="btn btn-default">التفاصيل</button>
                </div>
            </div>
        }
    </div>
}

