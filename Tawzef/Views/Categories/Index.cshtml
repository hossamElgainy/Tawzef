@model IEnumerable<Tawzef.Models.Category>

@{
    ViewBag.Title = "قائمه انواع الوظائف";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>قائمه انواع الوظائف</h2>

<p>
    @Html.ActionLink("انشاء نوع جديد", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryDescription)
        </td>
        <td>
            <a href="/Categories/Edit/@item.id" class="btn btn-primary">تعديل <i class="fa fa-edit"></i></a>
            <a href="/Categories/Details/@item.id" class="btn btn-success">تفاصيل <i class="fa fa-edit"></i></a>
            <a href="/Categories/Delete/@item.id" class="btn btn-danger">حذف <i class="fa fa-close"></i> </a>
        </td>
    </tr>
}

</table>
