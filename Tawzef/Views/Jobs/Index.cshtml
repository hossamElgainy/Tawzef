@model IEnumerable<Tawzef.Models.Job>

@{
    ViewBag.Title = "الوظائف";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>الوظائف</h2>

<p>
    @Html.ActionLink("اضافه وظيفه جديده", "Create")
    @Html.ActionLink("Print", "Print")
</p>
<table class="table table-bordered table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobContent)
        </td>
        <td>
            <img src="~/UPloads/@item.JobImage" 
                 style="width:48px;height:48px;"/>

        </td>
        <td>
            <a href="/Jobs/Edit/@item.Id" class="btn btn-primary">تعديل <i class="fa fa-edit"></i></a>
            <a href="/Jobs/Details/@item.Id" class="btn btn-success">تفاصيل <i class="fa fa-edit"></i></a>
            <a href="/Jobs/Delete/@item.Id" class="btn btn-danger">حذف <i class="fa fa-close"></i> </a>          
        </td>
    </tr>
}

</table>
